<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.l.mediumproject.LoginActivity"
    tools:showIn="@layout/activity_login">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameloginId"
        android:layout_margin="20dp"

        android:background="@android:drawable/edit_text"
        android:inputType="number"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordloginId"
        android:layout_below="@id/nameloginId"
        android:layout_margin="20dp"
        android:inputType="numberPassword"
        android:background="@android:drawable/edit_text"/>
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/registerId"
        android:text="注册"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/passwordloginId"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/loginId"
        android:text="登录"
        android:layout_alignParentRight="true"
        android:layout_below="@id/passwordloginId"
        android:layout_toRightOf="@id/registerId"/>
</RelativeLayout>
